<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    tools:context=".MainActivity">

    <!-- Left side: Fan icon and controls -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:paddingEnd="16dp">

        <!-- Icon and countdown -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/icon_frame"
            android:clipChildren="true"
            android:clipToPadding="true">

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/boxfan_icon"
                android:scaleType="centerInside"
                android:padding="12dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/countdownDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/accent"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingVertical="4dp"
            android:visibility="gone"
            android:fontFamily="sans-serif-medium" />

        <!-- Play button -->
        <Button
            android:id="@+id/playPauseButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:text="▶"
            android:textSize="36sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_background"
            android:layout_marginVertical="8dp"
            android:fontFamily="sans-serif-medium"
            android:elevation="8dp"
            android:stateListAnimator="@null" />

        <!-- Status text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loading..."
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="12sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp"
            android:lineSpacingMultiplier="1.1" />

        <!-- Volume control -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:textColor="@color/text_primary"
                android:textSize="11sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"
                android:letterSpacing="0.05" />

            <SeekBar
                android:id="@+id/volumeSlider"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:max="100"
                android:progress="50"
                android:minHeight="4dp"
                android:progressDrawable="@android:drawable/progress_horizontal" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right side: Timer controls -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/surface"
        android:padding="10dp"
        android:paddingStart="12dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer"
            android:textColor="@color/text_primary"
            android:textSize="11sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="8dp"
            android:letterSpacing="0.05" />

        <!-- Timer display with H:M -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/hourPlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="+"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/hourDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/hourMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="−"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp"
                    android:padding="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accent"
                android:layout_marginHorizontal="4dp"
                android:fontFamily="sans-serif-medium" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/minutePlus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="+"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp"
                    android:padding="0dp" />

                <TextView
                    android:id="@+id/minuteDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/accent"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp" />

                <Button
                    android:id="@+id/minuteMinus"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:text="−"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_background"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="2dp"
                    android:padding="0dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textColor="@color/text_secondary"
                    android:textSize="10sp"
                    android:fontFamily="sans-serif-medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Timer buttons -->
        <Button
            android:id="@+id/timerSetButton"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:text="Start"
            android:textColor="@android:color/white"
            android:textSize="11sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/timerDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No timer set"
            android:textAlignment="center"
            android:textColor="@color/text_secondary"
            android:textSize="11sp"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>
